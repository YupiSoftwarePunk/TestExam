<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Мастер пол" Height="450" Width="800"
        Icon="/Мастер пол.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="mainListBox" Grid.Row="0" Grid.Column="0" 
                 Grid.ColumnSpan="2" Margin="20">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="3">
                        <TextBlock Text="{Binding Path=Type}" Name="ParthnerType"/>
                        <TextBlock Text="{Binding Path=ComapnyName}" Name="ParthnerName"/>
                        <TextBlock Text="{Binding Path=DirectorFullName}" Name="ParthnerDirector"/>
                        <TextBlock Text="{Binding Path=PhoneNumber}" Name="ParthnerNumber"/>
                        <TextBlock Text="{Binding Path=Rating}" Name="ParthnerRaiting"/>
                        <TextBlock Text="{Binding Path=TotalProducts}" Name="TotalProducts" HorizontalAlignment="Right"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="AddButton" Click="AddButtonClick" 
                    Content="Добавить" Margin="10"/>
            <Button x:Name="EditButton" Click="EditButtonClick" 
                Content="Изменить" Margin="10"/>
            <Button x:Name="DeleteButton" Click="DeleteButtonClick" 
                Content="Удалить" Margin="10" Width="60"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1" >
            <TextBlock Text="Ошибки" Margin="5"/>
            <Border x:Name="ErrorBorder">
                <TextBlock x:Name="ErrorMessage" Foreground="Red" FontWeight="SemiBold"
                   TextWrapping="Wrap" TextAlignment="Center"/>
            </Border>
        </StackPanel>

    </Grid>
</Window>

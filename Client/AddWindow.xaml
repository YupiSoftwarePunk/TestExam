<Window x:Class="Client.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Добавить" Height="500" Width="400">
    
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление партнёра" FontSize="20" HorizontalAlignment="Center" Margin="0 10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Наименование компании"/>
            <TextBox x:Name="CompanyNameInput" Margin="0 5"/>
            
            <TextBlock Text="Тип партнёра"/>
            <ComboBox x:Name="PartnerTypeInput" Margin="0 5" SelectedValuePath="Id" DisplayMemberPath="Type"/>
            
            <TextBlock Text="Рейтинг"/>
            <TextBox x:Name="RatingInput" Margin="0 5"/>
            
            <TextBlock Text="Адрес"/>
            <TextBox x:Name="AddressInput" Margin="0 5"/>
            
            <TextBlock Text="ФИО директора"/>
            <TextBox x:Name="DirectorInput" Margin="0 5"/>
            
            <TextBlock Text="Телефон"/>
            <TextBox x:Name="PhoneInput" Margin="0 5"/>
            
            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailInput" Margin="0 5"/>
        </StackPanel>

        <Button Grid.Row="2" x:Name="AddButton" Content="Добавить"
                Width="150" Height="40" HorizontalAlignment="Center" Margin="10" 
                Click="AddButtonClick"/>
    </Grid>
</Window>
